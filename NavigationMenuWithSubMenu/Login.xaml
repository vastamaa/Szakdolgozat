<Window x:Class="MenuWithSubMenu.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuWithSubMenu"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Litera Login" Height="220" Width="220">
    <Grid>
        <GroupBox Header="GroupBox Sample" Margin="10" Padding="10">
            <StackPanel>
                <TextBlock>Username:</TextBlock>
                <TextBox x:Name="tbUsername" />
                <TextBlock>Password:</TextBlock>
                <TextBox x:Name="tbPassword" />
                <Button x:Name="btnSignIn" Margin="0, 20, 100, 0" Click="btnSignIn_Click">Sign in!</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
